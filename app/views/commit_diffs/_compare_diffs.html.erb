<%= breadcrumbs_from(@root) -%>
<h1><%= t("views.commits.compare_title", :last_commit => @commit.id[0..7], :first_commit => @first_commit_id[0..7]) %></h1>

<% if @diffs.blank? -%>
  <p><%= t("views.commits.message").call(self, tree_path(@commit.id)) %></p>
<% else -%>
  <%= render_diff_stats(@commit.stats) if sidebyside_diff? -%>
  <%= render_diffmode_selector :url => url_for(:controller => :commit_diffs, :action => :compare) -%>
  <%= render :partial => "commits/diffs" -%>
<% end -%>
