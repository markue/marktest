<% @page_title = h(@project.title) + " - " + h(@page.title) + " - " + t("views.layout.pages")  -%>
<%= breadcrumbs_from(@root) -%>

<div class="page-header">
  <h1>
    <%= h(@page.title) -%> 
  </h1>
</div>

<%= wikize(@page.content) -%>

<% if commit = @page.commit -%>
<div class="page-meta">
  <p>
    <% if @page.committed_by_user -%>
      <%#= t("views.pages.last_edited_by", 
          :link_or_name => link_to(h(@page.committed_by_user.title), user_path(@page.committed_by_user))) -%>
    <% else -%>
      <%= t("views.pages.last_edited_by", :link_or_name => h(commit.committer.name)) -%>
    <% end -%>
  </p>
</div>


<% content_for :sidebar do -%>
  <ul class="links navigation">
    <% if logged_in? -%>
      <li class="edit_wiki_page">
        <%= edit_link(@page) -%>
      </li>
    <% end -%>
    <li class="wiki_page_history">
      <%= link_to(t("views.pages.history"), history_project_page_path(@project, @page.title)) -%>
    </li>
    <li class="wiki_page">
      <%= link_to(t("views.pages.index"), project_pages_path(@project)) -%>
    </li>
    <li class="wiki_via_git">
      <%= link_to(t("views.pages.git"), git_access_project_pages_path(@project)) -%>
    </li>
  </ul>
  <p>
    <strong>Last update:</strong> <%= commit.date.to_s(:short) -%>
  </p>
<% end -%>
<% end -%>

