<h1><%= t("views.users.openid_build_title") %></h1>
<p><%= t("views.users.openid_build_description") %></p>

<%= error_messages_for :user %>

  <%- form_for(@user, :url => {:action => 'openid_create'}) do |f| -%>
  <p>
    <%= f.label :login, t(:login, :scope => "activerecord.attributes.user") -%><br/>
    <%= f.text_field :login -%>
  </p>

  <p>
    <%= f.label :email, t(:email, :scope => "activerecord.attributes.user") -%><br/>
    <%= f.text_field :email -%>
  </p>

  <p>
    <%= f.label :fullname, t(:fullname, :scope => 'activerecord.attributes.user') -%><br/>
    <%= f.text_field :fullname -%>
  </p>

  <div class="eula">
    <a href="<%= GitoriousConfig["terms_of_service_url"] %>" target="_blank">Terms of Service</a>
  </div>

  <p>
    <%= f.check_box :terms_of_use  -%>
    <label for="terms_of_use">I accept the Terms of Use</label>
  </p>
  
  <p><%= f.submit t("views.common.signup") %></p>
<%- end -%>
