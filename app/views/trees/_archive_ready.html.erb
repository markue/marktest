    window.location = "<%= project_repository_archive_zip_path(@repository.project, @repository, ensplat_path(@ref)) -%>";
  <% end -%>
  
  $('archive-box-<%= @ref.gsub("/", "_") -%>').hide();
</script>

<h4>Download ready</h4>

<%= render_download_links(@repository.project, @repository, @ref, 
      :except => :source_tree) -%>
  